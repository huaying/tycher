// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Topic {
  id          Int         @id @default(autoincrement())
  name        String
  description String?     @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([name])
}

model QuestionSet {
  id          Int         @id @default(autoincrement())
  name        String?
  topicId     Int
  private     Boolean?
  questions   QuestionOnQuestionSet[]
  exams       Exam[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model QuestionOnQuestionSet {
  id           Int         @id @default(autoincrement())
  questionId   Int  
  question      Question  @relation(fields: [questionId], references: [id])
  questionSetId  Int
  questionSet   QuestionSet @relation(fields: [questionSetId], references: [id])
  
  @@unique([questionId, questionSetId])
  @@index([questionSetId])
}

model Question {
  id           Int          @id @default(autoincrement())
  content      String       @db.Text
  topicId      Int?
  options      Json
  answer       Int
  questionSets QuestionOnQuestionSet[]
  details      String       @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([topicId])
}

model Exam {
  id          Int       @id @default(autoincrement())
  userId      String
  questionSetId Int
  questionSet   QuestionSet @relation(fields: [questionSetId], references: [id])
  answers       Json?
  timestamp   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  score       Int?
  status     ExamStatus?

  @@index([questionSetId, userId])
}

enum ExamStatus {
    Quitted
    Submitted
}