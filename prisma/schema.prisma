generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Topic {
  id          Int         @id @default(autoincrement())
  name        String
  description String?     @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt

  @@unique([name])
}

model QuestionSet {
  id          Int         @id @default(autoincrement())
  name        String?
  topicId     Int
  private     Boolean?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
}

model QuestionOnQuestionSet {
  id           Int         @id @default(autoincrement())
  questionId   Int  
}

model Question {
  id           Int          @id @default(autoincrement())
  content      String       @db.Text
  topicId      Int?
  options      Json
  answer       Int
  details      String       @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt

  @@index([topicId])
}

model Exam {
  id          Int       @id @default(autoincrement())
  userId      String
  timestamp   DateTime  @default(now())

  @@index([userId])
}

model AnswerRecord {
  id          Int       @id @default(autoincrement())
  testId      Int
  questionId  Int
  answer      Int
  timestamp   DateTime  @default(now())

  @@index([testId])
  @@unique([testId, questionId])
}